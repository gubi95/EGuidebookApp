<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#F0F0F0F0"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/spot_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/spot_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_spot_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textStyle="bold"
        android:gravity="right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_spot_grade_star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/iv_spot_grade_star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/iv_spot_grade_star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/iv_spot_grade_star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/iv_spot_grade_star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_empty"/>

    </LinearLayout>





</LinearLayout>